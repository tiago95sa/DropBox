grant {
    // allow activation groups to use certain system properties
    permission com.sun.rmi.rmid.ExecOptionPermission "-Djava.security.policy=${SD.Projeto.Dropbox.activation.policy}";
    permission com.sun.rmi.rmid.ExecOptionPermission "-Djava.class.path=no_classpath";
    permission com.sun.rmi.rmid.ExecOptionPermission "-DSD.Projeto.Dropbox.activation.impl.codebase=*";
    permission com.sun.rmi.rmid.ExecOptionPermission "-DSD.Projeto.Dropbox.activation.file=*";
};
